# Dockerfile.dev - Per sviluppo con volume mount
FROM python:3.12.10

WORKDIR /app

# Copia solo requirements.txt per sfruttare la cache
COPY requirements.txt .

# Installa le dipendenze direttamente nel global env
RUN pip install --no-cache-dir -r requirements.txt uvicorn[standard]

# Installa curl per health check
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

EXPOSE 8000

CMD ["uvicorn", "api.v1.mcpApi:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
